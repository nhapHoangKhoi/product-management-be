extends ../../layouts/default.pug

block main

   - if(correspondRole.permissions.includes("roles_create")) 

      button(
         class="btn btn-secondary mb-3"
         onclick="history.back()"
      ) Go back

      //- h1(class="mb-4") Trang tạo mới nhóm quyền
      h1(class="mb-4") #{pageTitle}

      form(
         action=`/${prefixAdmin}/roles/create`
         method="POST"
      )
         div(class="form-group")
            label(for="title") Tiêu đề <span style="color: red;">*</span>
            input(
               type="text"
               class="form-control"
               id="title"
               name="title"
               required
            )

         div(class="form-group")
            label(for="description") Mô tả
            input(
               type="text"
               class="form-control"
               id="description"
               name="description"
            )

         div(class="form-group")
            button(
               type="submit"
               class="btn btn-primary"
            ) Tạo mới