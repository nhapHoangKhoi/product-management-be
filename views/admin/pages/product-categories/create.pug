extends ../../layouts/default.pug

include ../../mixins/select-hierarchy.pug

block main

   - if(correspondRole.permissions.includes("product-categories_create")) 

      button(
         class="btn btn-secondary mb-3"
         onclick="history.back()"
      ) Go back

      h1(class="mb-4") Thêm mới danh mục sản phẩm

      form(
         action=`/${prefixAdmin}/product-categories/create`
         method="POST"
         enctype="multipart/form-data"
      )
         div(class="form-group")
            label(for="title") Tiêu đề <span style="color: red;">*</span>
            input(
               class="form-control"
               name="title"
               id="title"
               type="text"
               required
            )

         div(class="form-group")
            label(for="parent_id") Danh mục cha
            select(
               name="parent_id"
               class="form-control"
               id="parent_id"
            )
               option(value="") -- Chọn danh mục cha --
               - if(listOfCategories)
                  +select-hierarchy(listOfCategories)

         div(class="form-group")
            label(for="description") Mô tả
            textarea(
               class="form-control"
               name="description"
               id="description"
               type="text"
               rows="5"
               textarea-mce
            )

         div(class="form-group")
            label(for="position") Vị trí
            input(
               type="number"
               class="form-control"
               name="position"
               id="position"
               placeholder="Tự động tăng"
               min="1"
            )

         div(class="form-group form-check form-check-inline")
            input(
               type="radio"
               class="form-check-input"
               name="status"
               id="statusActive"
               value="active"
               checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động
         
         div(class="form-group form-check form-check-inline")
            input(
               type="radio"
               class="form-check-input"
               id="statusInActive"
               name="status"
               value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
         
         div(class="form-group")
            button(
               type="submit"
               class="btn btn-primary"
            ) Tạo mới